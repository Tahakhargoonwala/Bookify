<% layout("layouts/boilerplate")%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        
    }
    .filter{
        margin-top: 2rem;
        margin-right: 2rem;
        text-align: center;
        opacity: 0.8;
    }
    .filter:hover{
        cursor: pointer;
        opacity: 1;
    }
</style>
<body> 
    <!-- <h3 style="text-align: center; font-size: 3.3rem;"></h3>  -->
    
     <div id="filters">
        <div class="filter" style="opacity: 1; margin-right: 10rem; margin-left: 2rem;"><h3>Welcome to Bookify</h3></div>
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trendings</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Hill stations</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-monument"></i></div>
            <p>Monuments</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></i></div>
            <p>Beaches</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <p>Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Swim area</p>
        </div>
     </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing.id %>" style="text-decoration: none;" > 
            <div class="card col listing-card" style="width: 20rem;">
                <img src="<%=listing.image%>" class="card-img-top" alt="listing_image " style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                <p class="card-text">
                    <b><%=listing.title %></b><br>
                    <% if (listing.price != null) { %>
                        &#8377;<%=listing.price.toLocaleString("en-IN") %>/night
                    <% } else { %>
                        Price not available
                    <% } %>
                </p>
                </div>
            </div></a>
        <%} %>
    </div>
    

    
    
</body>


